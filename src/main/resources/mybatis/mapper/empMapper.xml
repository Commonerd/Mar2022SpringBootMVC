<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="myapp.test.scott.dao.EmpDao">

	<insert id="addEmp" parameterType="myapp.test.scott.dto.Emp">
	insert into emp values(#{empno},#{ename},#{job},#{mgr},#{hiredate},#{sal},#{comm},#{deptno})
	</insert> 
	
	<update id="updateEmp" parameterType="myapp.test.scott.dto.Emp">
	update dept set dname = #{dname}, loc = #{loc} where deptno = #{deptno}
	</update>
	
	<delete id="deleteEmp" parameterType="int">
	delete from emp where deptno = #{deptno}
	</delete>
	
	<select id="empAll" resultType="myapp.test.scott.dto.Emp">
		select * from emp 
	</select>
	<select id="empOne" parameterType="int" resultType="myapp.test.scott.dto.Emp">
		select * from emp where deptno = #{no}
	</select>
	<select id="maxNo" resultType="int">
	select max(deptno) from emp
	</select>
</mapper>